<p id="notice">
  <%= notice %>
</p>
<p>
  <b>Título:</b>
  <%= @quest.title %>
</p>
<p>
  <b>Descrição:</b>
  <%= @quest.description %>
</p>
<% unless @quest.question_grids.empty? %>
  <p>
    <b>Perguntas:</b>
  </p>
  <div class="card">
  <ul class="list-group list-group-flush">
    
    <% @quest.question_grids.each do |question_grid| %>
    <li class="list-group-item">
        <%= question_grid.enum %></li>
    <% end %>
  </ul>
</div>
<% end %>
<br>
<br>
<%= link_to 'Editar', edit_quest_path(@quest), class: "btn btn-primary" %>

<%= link_to 'Voltar', quests_path, class: "btn btn-secondary" %>
